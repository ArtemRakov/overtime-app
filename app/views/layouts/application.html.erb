<!DOCTYPE html>
<html>
  <head>
    <title>OvertimeApp</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container">
      <div class="row">
        <div class="col-md-12">
          <%= render 'shared/navbar' %>
          <%= yield %>
          <%= yield(:js)  %>
        </div>
      </div>
    </div>
    <%= js add_gritter(flash[:notice], title: "OvertimeApp Notification", sticky: false, time: 3000) %>
  </body>
</html>
