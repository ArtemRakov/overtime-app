<h1>Posts</h1>
<div class="container-fluid">
  <div class="row">
    <div class="col-md-12">
      <table class="table table-hover table-striped">
        <thead>
          <tr>
            <th>
              Hours
            </th>
            <th>
              Date
            </th>
            <th class="hidden-xs">
              Work Performed
            </th>
            <th>
              Status
            </th>
            <th>

            </th>
            <th>

            </th>
          </tr>
        </thead>
        <tbody id='posts'>
          <%= render @posts %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<div id="paginator">
  <%= paginate @posts, remote: true %>
</div>
