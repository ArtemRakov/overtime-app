<h1>Posts</h1>
<div class="container-fluid">
  <div class="row">
    <div class="col-md-12">
      <table class="table table-hover table-striped">
        <thead>
          <tr>
            <th>
              #
            </th>
            <th>
              Date
            </th>
            <th>
              User
            </th>
            <th>
              Rationale
            </th>
            <th>

            </th>
            <th>

            </th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <% @posts.each do |post|  %>
              <%= render 'shared/posts', post: post %>
            <% end %>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>

